{
  "info": {
    "name": "CaseFlow API",
    "description": "CaseFlow - CSV Import & Case Management System API",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001/api",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', response.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', response.refreshToken);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"operator@caseflow.com\",\n  \"password\": \"operator123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newuser@example.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{refreshToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "refresh"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Cases",
      "item": [
        {
          "name": "List Cases",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cases?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["cases"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "20"},
                {"key": "status", "value": "PENDING", "disabled": true},
                {"key": "category", "value": "TAX", "disabled": true},
                {"key": "priority", "value": "HIGH", "disabled": true},
                {"key": "search", "value": "John", "disabled": true},
                {"key": "sortBy", "value": "createdAt", "disabled": true},
                {"key": "sortOrder", "value": "desc", "disabled": true}
              ]
            }
          }
        },
        {
          "name": "Get Case by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cases/:id",
              "host": ["{{baseUrl}}"],
              "path": ["cases", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": ""
                }
              ]
            }
          }
        },
        {
          "name": "Create Case",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"caseId\": \"C-9999\",\n  \"applicantName\": \"Jane Smith\",\n  \"dob\": \"1995-05-15\",\n  \"email\": \"jane.smith@example.com\",\n  \"phone\": \"+14155551234\",\n  \"category\": \"TAX\",\n  \"priority\": \"MEDIUM\",\n  \"notes\": \"Test case\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/cases",
              "host": ["{{baseUrl}}"],
              "path": ["cases"]
            }
          }
        },
        {
          "name": "Update Case",
          "request": {
            "method": "PATCH",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"IN_PROGRESS\",\n  \"priority\": \"HIGH\",\n  \"notes\": \"Updated notes\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/cases/:id",
              "host": ["{{baseUrl}}"],
              "path": ["cases", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": ""
                }
              ]
            }
          }
        },
        {
          "name": "Delete Case",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cases/:id",
              "host": ["{{baseUrl}}"],
              "path": ["cases", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": ""
                }
              ]
            }
          }
        },
        {
          "name": "Get Case Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cases/stats",
              "host": ["{{baseUrl}}"],
              "path": ["cases", "stats"]
            }
          }
        }
      ]
    },
    {
      "name": "Imports",
      "item": [
        {
          "name": "Upload CSV",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "sample-cases.csv"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/imports/upload",
              "host": ["{{baseUrl}}"],
              "path": ["imports", "upload"]
            }
          }
        },
        {
          "name": "Submit Import",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"filename\": \"sample-cases.csv\",\n  \"cases\": [\n    {\n      \"caseId\": \"C-1001\",\n      \"applicantName\": \"Asha Verma\",\n      \"dob\": \"1990-03-14\",\n      \"email\": \"asha.verma@example.com\",\n      \"phone\": \"+919876543210\",\n      \"category\": \"TAX\",\n      \"priority\": \"HIGH\"\n    }\n  ]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/imports/submit",
              "host": ["{{baseUrl}}"],
              "path": ["imports", "submit"]
            }
          }
        },
        {
          "name": "List Imports",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/imports",
              "host": ["{{baseUrl}}"],
              "path": ["imports"]
            }
          }
        },
        {
          "name": "Get Import by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/imports/:id",
              "host": ["{{baseUrl}}"],
              "path": ["imports", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": ""
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        }
      ]
    }
  ]
}
