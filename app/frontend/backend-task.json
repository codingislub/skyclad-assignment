{
  "family": "caseflow-backend-dev",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::395305481916:role/caseflow-execution-role-dev",
  "taskRoleArn": "arn:aws:iam::395305481916:role/caseflow-task-role-dev",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "395305481916.dkr.ecr.us-east-1.amazonaws.com/caseflow-backend-dev:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {"name": "NODE_ENV", "value": "production"},
        {"name": "PORT", "value": "3000"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/caseflow-backend-dev",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      }
    }
  ]
}
